"VertexlitGeneric"
{
	"$basetexture" "models/workshop/weapons/c_models/c_peenade/c_peenade_blue"
	"$bumpmap" "models/workshop/weapons/c_models/c_peenade/c_peenade_normal"

	"$selfillum" "1"

	"$phong" "1"
	"$phongexponent" "35"
	"$phongboost" "5"	
	"$lightwarptexture" "models/lightwarps/weapon_lightwarp"
	"$phongfresnelranges" "[0.25 0.5 1]"
	"$glowcolor" "1"


	// Cloaking
	"$cloakPassEnabled" "1"
	"Proxies"
	{
		"invis"
		{
		}
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$selfillumtint"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
		"Sine"
		{
			"resultVar" $selfillumtint
			"sinemin" .1
			"sinemax" 2.00
			"sineperiod" 0.30
		}

	}
}

