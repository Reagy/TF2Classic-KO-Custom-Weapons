{
	"$baseTexture" "models/weapons/c_items/c_stamp"


	"$phong" "1"
	"$phongexponent" "5"
	"$phongboost" "2.5"	
	"$lightwarptexture" "models\lightwarps\weapon_lightwarp"
	"$phongfresnelranges"	"[.25 0.5 1]"

	"$basemapalphaphongmask" "1"

	// Rim lighting parameters
	"$rimlight" "1"
	"$rimlightexponent" "10"	
	"$rimlightboost" "1"


	"$glowcolor" "1"

	// Cloaking
	"$cloakPassEnabled" "1"
	"Proxies"
	{
		"vm_invis"
		{
		}
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$selfillumtint"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
	}
}
