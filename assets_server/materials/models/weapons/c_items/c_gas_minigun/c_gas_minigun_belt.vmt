VertexlitGeneric
{
	///////////////////////////////////////////////////////////////////////////////
	//					texture.
	///////////////////////////////////////////////////////////////////////////////
	$basetexture "models\weapons\c_items\c_gas_minigun\c_gas_minigun_belt.vtf"
	$model 1

	//$alpha 1.0
	//$transluscent 1


	///////////////////////////////////////////////////////////////////////////////
	//					phong.
	///////////////////////////////////////////////////////////////////////////////
	$phong 1
	$phongexponent 50
	$phongboost 0.5
	$phongfresnelranges "[0.3 0.5 3]"
	$phongalbedotint 1

	//$lightwarptexture "models/player/pyro/pyro_lightwarp"		//player light warp
	$lightwarptexture "models\lightwarps\weapon_lightwarp"		//weapon light warp
	//$halflambert 1

	$rimlight 1
	$rimlightexponent 2
	$rimlightboost 2.5


	///////////////////////////////////////////////////////////////////////////////
	//					paint section.	
	///////////////////////////////////////////////////////////////////////////////
	//$BlendTintByBaseAlpha 1
	//$BlendTintColorOverBase 1.0

	//$colortint_base "[1 1 1]"
	//$colortint_tmp "[0 0 0]"
	//$color2 "[1 1 1]"

	//$BaseMapAlphaPhongMask 1


	///////////////////////////////////////////////////////////////////////////////
	//					special effects.
	///////////////////////////////////////////////////////////////////////////////
	$yellow 0
	$glowcolor 1

	$cloakPassEnabled 1
	$sheenPassEnabled 1

	$sheenmap		"cubemaps\cubemap_sheen001"
	$sheenmapmask		"Effects\AnimatedSheen\animatedsheen0"
	$sheenmaptint		"[ 1 1 1 ]"
	$sheenmapmaskframe 	0
	$sheenindex 		0


	///////////////////////////////////////////////////////////////////////////////
	//					Proxies.
	///////////////////////////////////////////////////////////////////////////////
	"Proxies"
	{
		"AnimatedWeaponSheen"
		{
			"animatedtexturevar" 		"$sheenmapmask"
			"animatedtextureframenumvar" 	"$sheenmapmaskframe"
			"animatedtextureframerate" 		"40"
		}
		"invis"
		{
		}
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$selfillumtint"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Multiply"
		{
			"srcVar1" "$color2"
			"srcVar2" "$yellow"
			"resultVar" "$color2"
		}
		//View Model Cloaking
		//"vm_invis"
		//{
		//}
		"TextureScroll"
		{
			"texturescrollvar" "$basetexturetransform"
			"texturescrollrate" 2.0
			"texturescrollangle" 90.0
		}
	}
}